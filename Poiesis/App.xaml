<Application x:Class="Poiesis.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:vm="clr-namespace:Poiesis.ViewModel"
             xmlns:b="clr-namespace:Poiesis.Base"
             StartupUri="/Poiesis;component/View/ApplicationView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Base\Resources\Styles.xaml" />
                <ResourceDictionary>
                    <vm:ViewModelLocator x:Key="Locator" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>