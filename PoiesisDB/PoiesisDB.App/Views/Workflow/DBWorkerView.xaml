<UserControl x:Class="PoiesisDB.App.Views.Workflow.DBWorkerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PoiesisDB.App.Views.Workflow"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding DBWorkerViewModel, Source={StaticResource Locator}}">

    <StackPanel HorizontalAlignment="Left">

        <TextBlock Text="Run Process" Style="{StaticResource Heading2}" />
        <xctk:IconButton Icon="{StaticResource ImgDataTransfer}" Command="{Binding ExecuteTaskCommand}" Width="150" />

    </StackPanel>
</UserControl>
