<mui:ModernWindow
        x:Class="PoiesisDB.App.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoiesisDB.App"
        mc:Ignorable="d"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Height="700" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Icon="/Base/Resources/SampleAppIcon.ico"
        ContentSource="/Views/Workflow/ManagerView.xaml"
        DataContext="{Binding ShellWindowViewModel, Source={StaticResource Locator}}"
        Title="{Binding Title}" IsTitleVisible="True"
        TitleLinks="{Binding TitleLinks}">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="workflow">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Process DB" Source="/Views/Workflow/ManagerView.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Settings" GroupKey="settings">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Software" Source="/Views/Settings.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>
